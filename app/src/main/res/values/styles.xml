<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calendar">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="calendarDate">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="optionTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/optionTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="optionTitle2">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/optionTitle2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="option">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>>
        <item name="android:textColor">@color/option</item>
    </style>

    <style name="timeOption">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="colorOption">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarConfigureTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalendarConfigureTime">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendarNote">
        <item name="android:textSize">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallCalendar">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
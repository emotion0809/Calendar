<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/linear_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_blue" />

            <TextView
                android:id="@+id/text_Blue"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/blue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_red" />

            <TextView
                android:id="@+id/text_red"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/red" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="#FF00FF00" />

            <TextView
                android:id="@+id/text_green"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/green" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_yellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_yellow" />

            <TextView
                android:id="@+id/tex_yellow"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/yellow" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_magenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_magenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_magenta" />

            <TextView
                android:id="@+id/text_magenta"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/magenta" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_cyan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_cyan" />

            <TextView
                android:id="@+id/tex_cyan"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cyan" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_purple" />

            <TextView
                android:id="@+id/text_purple"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/purple" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:onClick="onClick_dialogColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_circle"
                app:tint="@color/remind_orange" />

            <TextView
                android:id="@+id/tex_orange"
                style="@style/colorOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/orange" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>